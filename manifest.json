{
  "manifest_version": 3,
  "name": "AI Website Summarizer",
  "version": "1.0",
  "description": "Click to summarize the current webpage using AI.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
